{{ form_start(formProfile) }}

<section class="section-padding">
	<div class="container">
		<div class="row">
			<h3 class="text-extrabold">Your personal information</h3>
			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="input-field">
					{{ form_label(formProfile.gender) }}
					{{ form_widget(formProfile.gender) }}
				</div>
			</div>

			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="input-field">
					{{ form_label(formProfile.firstname) }}
					{{ form_widget(formProfile.firstname) }}
				</div>
			</div>

			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="input-field">
					{{ form_label(formProfile.lastname)}}
					{{ form_widget(formProfile.lastname)}}
				</div>
			</div>

			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="input-field">
					{{ form_label(formProfile.current_location)}}
					{{ form_widget(formProfile.current_location)}}
				</div>
			</div>

			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="input-field">
					{{ form_label(formProfile.adress)}}
					{{ form_widget(formProfile.adress)}}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="file-field input-field" style="margin-top: 32px;">
					<div class="btn btn-lg primary waves-effect waves-light">
						<span>
							<i class="material-icons">insert_photo</i>
							Photo</span>
						{{ form_label(formProfile.profil_picture)}}
						{{ form_widget(formProfile.profil_picture)}}
					</div>

					{% if candidat.profilPicture %}
					<div class="existing-file">
						<a href="{{ asset('assets/uploads/') }}" target="_blank">
							<i class="material-icons">&#xE24D;</i>
							Profil Picture</a>
					</div>
					<div class="file-path-wrapper">
						<input class="file-path validate" type="text" placeholder="Upload your ID photo" readonly>
					</div>
					{% endif %}
				</div>
			</div>
			<div class="col-xs-12 col-sm-6 col-md-8">
				<div class="row">
					<div class="col-xs-12 col-sm-6">
						<div class="input-field">
							{{ form_label(formProfile.country)}}
							{{ form_widget(formProfile.country)}}
						</div>
					</div>
					<div class="col-xs-12 col-sm-6">
						<div class="input-field">
							{{ form_label(formProfile.nationality)}}
							{{ form_widget(formProfile.nationality)}}
						</div>
					</div>
					<div class="col-xs-12 col-sm-6">
						<div class="input-field">
							{{ form_label(formProfile.date_of_birth)}}
							{{ form_widget(formProfile.date_of_birth)}}
						</div>
					</div>
					<div class="col-xs-12 col-sm-6">
						<div class="input-field">
							{{ form_label(formProfile.place_of_birth)}}
							{{ form_widget(formProfile.place_of_birth)}}
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row mt-40">
			<h3 class="text-extrabold">Your professional profile</h3>
			<div class="col-xs-12 col-sm-6">
				<div class="card card-panel passport">
					<div class="file-field input-field">
						<div class="btn btn-lg primary waves-effect waves-light">
							<span>
								<i class="material-icons">&#xE24D;</i>
								Passport</span>
							{{ form_label(formProfile.passport_file)}}
							{{ form_widget(formProfile.passport_file)}}
						</div>
						<div class="existing-file">
							<a href="#!" target="_blank">
								<i class="material-icons">&#xE24D;</i>
								passeport.jpg</a>
						</div>
						<div class="file-path-wrapper">
							<input class="file-path validate" type="text" placeholder="Upload your passport" readonly>
						</div>
					</div>
					<div class="file-field input-field">
						<div class="btn btn-lg primary waves-effect waves-light">
							<span>
								<i class="material-icons">&#xE24D;</i>
								CV</span>
							{{ form_label(formProfile.cv)}}
							{{ form_widget(formProfile.cv)}}
						</div>

						<div class="existing-file">
							<a href="#!" target="_blank">
								<i class="material-icons">&#xE24D;</i>
								CV.pdf</a>
						</div>
						<div class="file-path-wrapper">
							<input class="file-path validate" type="text" placeholder="Upload your Curriculum Vitae" readonly>
						</div>
					</div>

				</div>
			</div>
			<div class="col-xs-12 col-sm-6">
				<div class="col-xs-12 col-sm-12">
					<div class="input-field" style="margin-top: 5px;">
						{{ form_label(formProfile.job_category)}}
						{{ form_widget(formProfile.job_category)}}
						<label for="job_sector" class="active">Interest in job sector</label>
					</div>
				</div>
				<div class="col-xs-12 col-sm-12">
					<div class="input-field">
						{{ form_label(formProfile.experience)}}
						{{ form_widget(formProfile.experience)}}
						<label for="experience" class="active">Experience</label>
					</div>
				</div>
			</div>
			<div class="col-xs-12 col-sm-12">
				<div class="input-field">
					{{ form_label(formProfile.description)}}
					{{ form_widget(formProfile.description)}}
				</div>
			</div>
		</div>
	</div>
</section>

